---
interface Project {
  name: string;
  description: string;
  image: ImageMetadata;
  link: string;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;

import { Image } from "astro:assets";
---

<ul class="flex flex-col gap-10">
  {
    projects.map((project: Project) => {
      return (
        <li class="flex min-h-[20rem] flex-col items-center rounded-2xl bg-white px-10 py-8 shadow-xl md:flex-row">
          <div class="flex w-80 items-center justify-center">
            <a href={project.link}>
              <Image src={project.image} alt={project.name} />
            </a>
          </div>
          <div class="mt-8 w-full md:ml-10 md:mt-0">
            <h2 class="text-xl font-bold">{project.name}</h2>
            <p class="mt-1">{project.description}</p>
            <p class="mt-3">
              <a href={project.link} class="font-bold">
                Mehr erfahren
              </a>
            </p>
          </div>
        </li>
      );
    })
  }
</ul>
